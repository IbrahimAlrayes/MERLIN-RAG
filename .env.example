# --- SearXNG / Reader ---
SEARXNG_HOST=http://localhost:8080
READER_HOST=http://localhost:3001
READER_MODE=proxy        # proxy | reader
LANG=auto

# --- Search / Fetch knobs ---
MAX_RESULTS=5
MIN_CONTENT_CHARS=400
MIN_SOURCES=2

REQUEST_TIMEOUT=5        # first attempt timeout (sec)
RETRY_TIMEOUT=5          # retry attempt timeout (sec)
RETRY_ON_FAILURE=1       # number of retries on transient errors

FETCH_WORKERS=8          # thread workers for parallel fetch

# --- Logging ---
LOGLEVEL=INFO            # DEBUG | INFO | WARNING | ERROR | CRITICAL

# WEAVIATE_ENDPOINT=http://128.2.205.27:8080
WEAVIATE_ENDPOINT=128.2.205.27
WEAVIATE_HTTP_PORT=8080
WEAVIATE_GRPC_PORT=50051

HUGGINGFACE_API_KEY=...